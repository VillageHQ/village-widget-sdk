{
  
  "include": [
    "src/config"
  ],
  "compilerOptions": {    
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"]
    },
    "outDir": "./dist",
    "allowJs": true,
    "checkJs": true,
    "target": "es2016", 
    "module": "commonjs", 
    "esModuleInterop": true,      
    "forceConsistentCasingInFileNames": true, 
    "strict": true,                     
    "skipLibCheck": true 
  }
}
