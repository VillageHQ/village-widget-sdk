{
  "name": "village-widget-sdk",
  "type": "module",
  "publishConfig": {
    "access": "public"
  },
  "version": "1.0.47",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "vite build",
    "dev": "vite build --watch --mode development",
    "prepublishOnly": "npm run build",
    "deploy": "node scripts/deploy.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint . --ext .js,.ts,.tsx",
    "format": "prettier --write .",
    "check:bundle": "npm run build && node --check dist/index.js",
    "docs": "node scripts/generate-docs.js"
  },
  "dependencies": {
    "@chakra-ui/react": "^3.16.1",
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@tanstack/react-query": "^5.74.4",
    "axios": "^1.8.4",
    "framer-motion": "^12.7.4",
    "js-cookie": "^3.0.5",
    "marked": "^15.0.9",
    "react-icons": "^5.5.0",
    "uuid": "^11.1.0",
    "village-monorepo": "github:VillageHQ/frontend-web#refactor/remove-widget-to-external-repo"
  },
  "devDependencies": {
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@types/js-cookie": "^3.0.6",
    "@types/react": "^19.1.2",
    "@vitest/coverage-c8": "^0.33.0",
    "jsdom": "^26.1.0",
    "typedoc": "^0.28.3",
    "typedoc-plugin-markdown": "^4.6.2",
    "typescript": "^5.8.3",
    "vite": "^6.3.2",
    "vitest": "^3.1.2"
  }
}
