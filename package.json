{
  "name": "village-widget-sdk",
  "type": "module",
  "publishConfig": {
    "access": "public"
  },
  "version": "1.0.47",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "vite build",
    "dev": "vite build --watch --mode development",
    "prepublishOnly": "npm run build",
    "deploy": "node scripts/deploy.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint . --ext .js,.ts,.tsx",
    "format": "prettier --write .",
    "check:bundle": "npm run build && node --check dist/index.js",
    "docs": "node scripts/generate-docs.js"
  },
  "dependencies": {
    "axios": "^1.8.4",
    "js-cookie": "^3.0.5",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@types/react": "^19.1.2",
    "jsdom": "^26.1.0",
    "vite": "^6.3.2",
    "vitest": "^3.1.2"
  }
}
